{
  "name": "voicehub",
  "version": "1.5.0.0",
  "description": "校园广播站点歌管理系统 - 基于数据库存储的现代化点歌、排期和播放管理平台",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate --name=auto-migration",
    "db:push": "npx drizzle-kit push --force",
    "db:studio": "npx drizzle-kit studio",
    "db:drop": "npx drizzle-kit drop",
    "db:check": "npx drizzle-kit check",
    "setup": "npm install && npm run db:migrate",
    "create-admin": "cd scripts && npx tsx create-admin.js",
    "clear-db": "cd scripts && npx tsx clear-database.js",
    "safe-migrate": "cd scripts && npx tsx safe-migrate.js",
    "deploy": "node scripts/deploy.js",
    "vercel-build": "node scripts/deploy.js",
    "netlify-build": "node scripts/netlify-build.js",
    "check-deploy": "node scripts/check-deploy.js",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "@applemusic-like-lyrics/core": "^0.2.0-alpha.5",
    "@applemusic-like-lyrics/lyric": "^0.3.0",
    "@applemusic-like-lyrics/vue": "^0.2.0",
    "@edgeone/nuxt-pages": "^1.0.14",
    "@netlify/functions": "^2.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.19",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "chalk": "^5.3.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "formidable": "^3.5.4",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.14.0",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "nuxt": "^3.21.0",
    "postgres": "^3.4.7",
    "prompts": "^2.4.2",
    "redis": "^5.10.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "engines": {
    "node": ">=18.20.0",
    "npm": ">=8.0.0"
  }
}
